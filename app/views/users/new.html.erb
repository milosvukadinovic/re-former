<% if false %>
  <%= form_tag('/users', method: 'post', authenticity_token: true) do %>
    <%= label_tag(:username, 'Username:') %>
    <%= text_field_tag(:username) %>
    <br>
    <%= label_tag(:email, 'Email:') %>
    <%= text_field_tag(:email) %>
    <br>
    <%= label_tag(:password, 'Password:') %>
    <%= password_field_tag(:password) %>
    <br>
    <%= submit_tag('Create user') %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :username, 'Username:' %>
  <%= f.text_field :username, placeholder: 'Enter username' %>
  <br>
  <%= f.label :email, 'Email:' %>
  <%= f.text_field :email, placeholder: 'Enter your email' %>
  <br>
  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password, placeholder: 'Enter password' %>
  <br>
  <%= f.submit 'Create user' %>
<% end %>